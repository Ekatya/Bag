<%= form_tag({action: :create, controller: :products}, multipart: true) do %> 
<table class="active_admin_">
<tr>
<td>
<% categories_mas= options_from_collection_for_select(Category.all, :id, :name) %>
<%= select_tag( :category, categories_mas, class: 'active_admin') %>
</td>
<td id='result_ajax'>

	
	<% subcategories_mas= options_from_collection_for_select(Subcategory.where(category_id: '1'), :id, :name) %>
<%= select_tag( :subcategory, subcategories_mas, class: 'active_admin') %>


</td>
</tr>
<tr>
<td>
    <%= label_tag :name, "name" %>
    </td>
    <td>
    <%= text_field_tag :name, '', class: 'active_admin_text' %>
</td>
</tr>
<tr>
<td>
    <%= label_tag :price, "price" %>
    </td>
    <td>
    <%= text_field_tag :price, '', class: 'dd' , class: 'active_admin_text' %>
</td>
</tr>
<tr>
<td>
    <%= label_tag :description, "description" %>
    </td>
    <td>
    <%= text_area_tag(:description, "", class: 'active_admin_text', style:'height:40px;') %>
</td>
</tr>
<tr>
<td>
<%= label_tag :picture, "image" %>
</td>
    <td>
<%= file_field_tag 'picture', class: 'active_admin' %>
</td>
</tr>
<tr>
<td>
<%= label_tag :picture1, "image next" %>
</td>
    <td>
<%= file_field_tag 'picture1', class: 'active_admin' %>
</td>
</tr>
<tr>
<td>
<%= label_tag :picture2, "image next" %>
</td>
    <td>
<%= file_field_tag 'picture2', class: 'active_admin' %> 
