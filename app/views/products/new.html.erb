</tr>
<td>
    <%= label_tag :articul, "articul" %>
    </td>
    <td>
    <%= text_field_tag :articul, '', class: 'active_admin_text' %>
</td>
</tr>
<tr>
<td>
    <%= label_tag :favourite, "favourite" %>
      </td>
    <td>  
    <%= text_field_tag :favourite, '', class: 'active_admin_text' %>
</td>
</tr>
<tr>
<td>Цвет
</td>
<td>
<%= render 'products/color' %>
</td>
</tr>
<tr>
<td>

  <%= submit_tag "add product", class: 'active_admin' %>
  </td>
  <td>
  <%= link_to 'cancel', '/admin/products', class: 'active_admin', style:'padding:16px' %>
  </td>
  </tr>
  </table>
<% end %>