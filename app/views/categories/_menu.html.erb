<% def menu_next(odj, _id, goto_controller, goto_action, _id2) %>

<% odj.each do |sub| %>
<% if _id.to_s==sub.id.to_s %>

 <%= link_to sub.name, { controller: goto_controller, action: goto_action , id: sub.id }, class: 'menu_present', id2: _id2 %>

<% else %>

 <%= link_to sub.name, controller: goto_controller, action: goto_action, id: sub.id , id2: _id2 %>

<% end %>
<% end %>
<% end %>